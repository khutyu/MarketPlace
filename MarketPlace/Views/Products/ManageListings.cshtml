@model IEnumerable<Product>
@{
    ViewData["Title"] = "Manage Listings";
}

<style>
    .card {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 12px;
        overflow: hidden;
    }
    
    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0,0,0,.1)!important;
    }
    
    .card-img-container {
        position: relative;
        overflow: hidden;
        background: #f8f9fa;
    }
    
    .card-img-top {
        transition: transform 0.3s ease;
    }
    
    .card:hover .card-img-top {
        transform: scale(1.05);
    }
    
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        backdrop-filter: blur(4px);
        background: rgba(255,255,255,0.9);
        color: #198754;
        box-shadow: 0 2px 4px rgba(0,0,0,.1);
    }
    
    .card-body {
        padding: 1.25rem;
    }
    
    .product-title {
        font-size: 1rem;
        font-weight: 600;
        color: #2d3436;
    }
    
    .product-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #003D32;
    }
    
    .product-meta {
        font-size: 0.8rem;
        color: #a0a0a0;
    }
    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }
    .empty-state-icon {
        font-size: 4rem;
        color: #ccc;
        margin-bottom: 1rem;
    }
</style>

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fs-4 fw-bold mb-0">Manage Listings</h2>
        <a class="btn btn-warning pill" asp-action="Add" asp-controller="Product">
            <i class="bi bi-plus-lg me-2"></i>New Listing
        </a>
    </div>

    <!-- Filters Section -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Search listings...">
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-select">
                        <option value="">Status</option>
                        <option value="active">Active</option>
                        <option value="pending">Pending</option>
                        <option value="sold">Sold</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select">
                        <option value="">Sort By</option>
                        <option value="date">Date</option>
                        <option value="price">Price</option>
                        <option value="views">Views</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="empty-state">
            <i class="bi bi-shop empty-state-icon"></i>
            <h3 class="fs-4 mb-3">No Listings Yet</h3>
            <p class="text-muted mb-4">Start selling by creating your first listing!</p>
            <a class="btn btn-warning pill" asp-action="Add" asp-controller="Product">
                <i class="bi bi-plus-lg me-2"></i>New Listing
            </a>
        </div>
    }
    else
    {
        <!-- Listings Grid -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-none border-0">
                        <div class="card-img-container">
                            <img src="" 
                                class="card-img-top" 
                                style="height: 220px; object-fit: cover;" 
                                alt="">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="status-badge">
                                    <i class="bi bi-circle-fill me-1 small"></i>Active
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="product-title text-truncate mb-2"></h5>
                            <p class="product-price mb-2">@product.Price.ToString("C")</p>
                            <div class="product-meta d-flex align-items-center">
                                <i class="bi bi-eye me-1"></i>
                                <span class="me-3">0 views</span>
                                <i class="bi bi-clock me-1"></i>
                                <span></span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <button class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </button>
                                <button class="btn btn-outline-danger btn-sm rounded-pill px-3" 
                                        onclick="deleteProduct()">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteProduct(id) {
            if (confirm('Are you sure you want to delete this listing?')) {
                fetch(`/Product/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    }
                });
            }
        }
    </script>
}