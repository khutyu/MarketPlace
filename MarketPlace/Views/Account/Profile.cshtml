@model MarketPlace.Models.User
@using System

<div class="container mt-5">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
    <div class="row justify-content-center">
        <!-- Profile Picture and Username -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    @{
                        string imageUrl;
                        if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
                        {
                            var base64 = Convert.ToBase64String(Model.ProfilePicture);
                            imageUrl = $"data:image/png;base64,{base64}";
                        }
                        else
                        {
                            imageUrl = Url.Content("~/images/default-profile.png");
                        }
                    }
                    <img src="@imageUrl" class="rounded-circle img-fluid mb-3" style="width: 250px; height: 300px;" alt="Profile Picture">
                </div>
            </div>
        </div>
        <!-- Account Information -->
        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">Account Information</h4>
                    <hr>
                    <div class="mb-3">
                        <h6>Full Name</h6>
                        <p class="text-secondary">@($"{Model.FirstName} {Model.LastName}")</p>
                    </div>
                    <div class="mb-3">
                        <h6>Email</h6>
                        <p class="text-secondary">@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <h6>Phone</h6>
                        <p class="text-secondary">@Model.PhoneNumber</p>
                    </div>
                    <!-- Address Field -->
                    <div class="mb-3">
                        <h6>Address</h6>
                        <p class="text-secondary">@Model.Address.AddressLine1</p>
                        <p class="text-secondary">@Model.Address.AddressLine2</p>
                        <p class="text-secondary">@Model.Address.City</p>
                    </div>
                    <!-- Account Status -->
                    <div class="mb-3">
                        <h6>Account Status</h6>
                        @if (Model.IsSuspended)
                        {
                            <p class="text-danger">Suspended</p>
                        }
                        else
                        {
                            <p class="text-success">Active</p>
                        }
                    </div>
                    <!-- Role -->
                    <div class="mb-3">
                        <h6>Role</h6>
                        <p class="text-secondary"></p>
                    </div>
                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a class="btn btn-primary me-2" asp-controller="Account" asp-action="ProfileUpdate" asp-route-username="@User.Identity.Name">Edit Profile</a>
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>