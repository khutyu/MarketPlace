<section class=" chat-container">
    <!-- Contacts Panel -->
    <aside class="contacts-panel">
        <header>
            <input type="text" placeholder="Search contacts" class="contacts-search">
        </header>
        <section class="contacts-list">
            <article class="contact-item">
                <img src="/images/profile1.png" alt="Contact Photo">
                <section class="contact-info">
                    <h3>Robert Smith</h3>
                    <p>I can help you with your math problems</p>
                </section>
                <time datetime="2024-11-25T12:30">5m ago</time>
            </article>
            <!-- Repeat for more contacts -->
        </section>
    </aside>

    <!-- Chat Panel -->
    <section class="chat-panel">
        <header class="chat-header">
            <h2>Sarah Huo</h2>
        </header>
        <section class="chat-messages">
            <!-- Example messages -->
            <article class="message sent">
                <p>Really appreciate the insights!</p>
            </article>
            <article class="message received">
                <p>This one might be similar to what you're looking for.</p>
            </article>
        </section>
        <!-- Chat Input -->
        <section class="chat-input">
            <input type="text" placeholder="Type a message...">
            <button>Send</button>
        </section>
    </section>
</section>
